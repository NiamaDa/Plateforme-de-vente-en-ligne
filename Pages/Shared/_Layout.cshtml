<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceWebApp </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceWebApp.styles.css" asp-append-version="true" />
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+GY5w6F5h0e5E2Q5L5V5O5l5O5gqKffT5h5" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-qLfoXlhSOsm5Qdp1NVoQ+hFV+Bb3P6m/Ft2JdQVjZTCusJZPKEuR1ZFCtcD3gEv6" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Ensure you add the following links in the head section of your layout to load Font Awesome icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
    /* Style pour le bouton de recherche avec une couleur orange par défaut */
    .search-btn {
    color: orange;
    border-color: orange;
    background-color: transparent;
    }

    /* Lorsque l'utilisateur passe la souris sur le bouton */
    .search-btn:hover {
    background-color: orange;
    color: white; /* Vous pouvez changer la couleur du texte lors du hover */
    }

    /* Lorsque le bouton est actif ou enfoncé */
    .search-btn:active,
    .search-btn:focus {
    background-color: orange;
    color: white; /* Garde le texte blanc quand il est cliqué */
    border-color: orange; /* Garde la bordure orange */
    }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand" href="/">
                    <img src="/images/logo.jpg" alt="ECommerce" style="height: 40px;"> E-Commerce
                </a>
                <!-- Toggler for mobile view -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar content -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Barre de recherche avec icône orange -->
                    <form class="d-flex mx-auto" style="width: 50%;" method="get" action="/RedirectToResult">
                        <!-- Recherche produit -->
                        <input class="form-control me-2" type="text" name="productName" placeholder="Rechercher un produit..." aria-label="Search product">

                        <!-- Sélection catégorie -->
                        <select class="form-select me-2" name="categoryId">
                            <option value="">Toutes les catégories</option>
                            <option value="1">Électronique</option> <!-- Assurez-vous que ces valeurs correspondent à celles de votre base de données -->
                            <option value="2">Vêtements</option>
                            <option value="3">Livres</option>
                        </select>

                        <!-- Bouton de recherche -->
                        <button class="btn search-btn" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>





                    <!-- Right-side icons (Cart, Sign-in) -->
                    <ul class="navbar-nav ms-auto">
                        <!-- Cart icon -->
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Cart">
                                <i class="fas fa-shopping-cart"></i> Panier
                                <span class="badge bg-danger">3</span> <!-- Example for cart items count -->
                            </a>
                        </li>

                    <!-- Sign-in icon -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">
                                <i class="fas fa-user"></i> S'identifier
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ECommerceWebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>